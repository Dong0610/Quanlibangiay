<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_12sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_12sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_app_waring" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/worksans_semi_bold"
            android:text="@string/confirmation"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/txt_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/worksans_medium"
            android:text="@string/success"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/btn_back_order2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edt_account_dis"
                android:fontFamily="@font/worksans_semi_bold"
                android:paddingVertical="@dimen/_8sdp"
                android:text="Cancel"
                android:layout_marginEnd="@dimen/_12sdp"
                android:textAlignment="center"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_marginStart="@dimen/_12sdp"
                android:id="@+id/btn_back_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_account_end"
                android:fontFamily="@font/worksans_semi_bold"
                android:paddingVertical="@dimen/_8sdp"
                android:text="Ok"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>